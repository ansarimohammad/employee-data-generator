<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Generator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f4;
        }
        .container {
            max-width: 800px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        h1 {
            text-align: center;
            color: #333;
        }
        button {
            display: block;
            margin: 20px auto;
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }
        button:hover {
            background-color: #218838;
        }
        #response {
            margin-top: 20px;
            white-space: pre-wrap;
            background: #f8f9fa;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }
        .employee-list {
            list-style: none;
            padding: 0;
        }
        .employee-list li {
            background: #e9ecef;
            margin: 5px 0;
            padding: 10px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Random Employee Generator</h1>
        <p>Click the button to add 10 random employees to the database.</p>
        <button id="addEmployeeBtn">Add 10 Employees</button>
        <div id="response"></div>
    </div>

    <script>
        document.getElementById('addEmployeeBtn').addEventListener('click', async () => {
            const btn = document.getElementById('addEmployeeBtn');
            btn.disabled = true;
            btn.textContent = 'Adding...';
            try {
                const response = await fetch('/add-employee', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                const data = await response.json();
                if (data.employees) {
                    displayEmployees(data.employees);
                } else {
                    document.getElementById('response').innerText = data.message || 'Error';
                }
            } catch (error) {
                document.getElementById('response').innerText = 'Error: ' + error.message;
            } finally {
                btn.disabled = false;
                btn.textContent = 'Add 10 Employees';
            }
        });

        function displayEmployees(employees) {
            const responseDiv = document.getElementById('response');
            responseDiv.innerHTML = '<h2>Added Employees:</h2><ul class="employee-list">';
            employees.forEach(emp => {
                responseDiv.innerHTML += `<li><strong>${emp.name}</strong> - Salary: $${emp.salary}, Language: ${emp.language}, City: ${emp.city}, Manager: ${emp.isManager ? 'Yes' : 'No'}</li>`;
            });
            responseDiv.innerHTML += '</ul>';
        }
    </script>
</body>
</html>